<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mchicaizaS3.Views.vista3"
             Title="vista3">
    <VerticalStackLayout Padding="20" Spacing="20">
        
        
        <Label 
            Text="Ventana de registro"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            Style="{StaticResource estiloEntry}"
            x:Name="txtusuario" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="txtcontraseña" Placeholder="Ingrese contraseña"/>

        <Button x:Name="btnguardar" Text="Guardar" Clicked="btnguardar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>