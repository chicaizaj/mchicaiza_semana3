<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mchicaizaS3.Views.vista2"
             Title="vista2">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="TextColor" Value="blue"/>
            <Setter Property="BackgroundColor" Value="Grey"/>
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout Padding="20" Spacing="20">


        <Label x:Name="lblUsuario" FontSize="16" TextColor="red" HorizontalTextAlignment="Center"/>
        <Label Text="Ventana de Registro" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
        <Label
        Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
    </VerticalStackLayout>
</ContentPage>